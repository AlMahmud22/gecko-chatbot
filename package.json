{
  "name": "gecko-chatbot",
  "version": "1.1",
  "description": "Gecko Chatbot - Local AI Assistant by Equator",
  "author": "SADIK AL MAHMUD",
  "private": true,
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "start": "electron .",
    "start:prod": "cross-env NODE_ENV=production electron .",
    "preview": "vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.gecko.chatbot",
    "productName": "Gecko Chatbot",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "src/backend/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "public/gecko.ico",
      "certificateFile": "builds/cert/gecko-selfsigned.pfx",
      "certificatePassword": "Equators@123"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "public/gecko.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "public/gecko.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/forms": "^0.5.10",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.7.9",
    "dotenv": "^17.2.3",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.0.0",
    "framer-motion": "^12.23.24",
    "node-llama-cpp": "^3.14.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.28.0",
    "react-syntax-highlighter": "^16.0.0",
    "systeminformation": "^5.27.11",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^10.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "vite": "^6.0.1"
  }
}
