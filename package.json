{
  "name": "equators-chatbot",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "clean": "rimraf dist node_modules/.vite",
    "package": "npm run build && electron-builder",
    "package:dir": "npm run build && electron-builder --dir",
    "test": "jest",
    "start": "vite"
  },
  "build": {
    "appId": "com.equators.chatbot",
    "productName": "Equators Chatbot",
    "asar": true,
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "src/backend/**/*"
    ],
    "extraResources": [
      {
        "from": "models",
        "to": "models",
        "filter": [
          "*.gguf"
        ]
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "axios": "^1.11.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.7",
    "framer-motion": "^10.18.0",
    "fs-extra": "^11.2.0",
    "lodash": "^4.17.21",
    "lodash.debounce": "^4.0.8",
    "micromark": "^4.0.0",
    "mongodb": "^6.18.0",
    "node-cache": "^5.1.2",
    "node-os-utils": "^1.3.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.1.0",
    "react-router-dom": "^6.26.0",
    "react-syntax-highlighter": "^15.5.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "systeminformation": "^5.27.7",
    "unified": "^11.0.5",
    "uuid": "^10.0.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-react": "^7.24.7",
    "@eslint/js": "^9.7.0",
    "@tailwindcss/forms": "^0.5.7",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^37.2.4",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.8",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.4",
    "postcss": "^8.4.27",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.3.3",
    "vite": "^7.0.6",
    "wait-on": "^7.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
