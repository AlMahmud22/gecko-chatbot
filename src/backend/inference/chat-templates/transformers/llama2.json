{
  "name": "llama2",
  "description": "Meta Llama 2 chat template for transformer models",
  "engine": "transformers",
  "patterns": ["llama-?2", "llama2", "codellama", "code-llama"],
  "priority": 9,
  "roles": {
    "system": "system",
    "user": "user",
    "assistant": "assistant"
  },
  "stopTokens": ["</s>", "[INST]"],
  "template": {
    "prefix": "<s>",
    "systemMessage": "[INST] <<SYS>>\n{{content}}\n<</SYS>>\n\n",
    "userMessage": "[INST] {{content}} [/INST]",
    "assistantMessage": " {{content}}</s><s>",
    "specialHandling": "system_first_user_merge"
  }
}
